<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:padding="10dp">

        <TextView
            android:id="@+id/other_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_pic_layout"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/profile_pic_layout"
            layout="@layout/profile_pic_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/back_btn" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/chat_search_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_search"
            app:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pinned_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/off_white"
        android:padding="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/pin_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/light_gray"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pinned_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensagem fixada"
            android:layout_toEndOf="@id/pin_icon"
            android:layout_toStartOf="@+id/unpin_btn"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageButton
            android:id="@+id/unpin_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/in_chat_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinned_message_layout"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <EditText
            android:id="@+id/in_chat_search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquise no chat"
            android:layout_toStartOf="@+id/search_up_btn"
            android:inputType="text"/>

        <ImageButton
            android:id="@+id/search_up_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/arrow_up_float"
            android:layout_toStartOf="@+id/search_down_btn"/>

        <ImageButton
            android:id="@+id/search_down_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/in_chat_search_bar" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/attach_file_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_attach_file"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/my_primary"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/chat_message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/message_send_btn"
            android:layout_toEndOf="@id/attach_file_btn"
            android:background="@drawable/edit_text_rounded_corner"
            android:elevation="4dp"
            android:hint="Digite sua mensagem..."
            android:padding="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/message_send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_send"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/my_primary"
            android:padding="8dp"/>

    </RelativeLayout>

</RelativeLayout>